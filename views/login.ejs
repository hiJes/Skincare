<div class="container text-center mb-5">
  <h1>Login</h1>
</div>

<div class="container text-center">
  <% if(error) { %> <% error.split(',').forEach((er) => { %>
  <p style="color: red"><%= er %></p>
  <% }) %> <% } %>
</div>

<div class="container col-2">
  <form action="/login" method="post">
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Username</label>
      <input type="text" name="userName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" />
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <input type="password" name="password" class="form-control" id="exampleInputPassword1" />
    </div>
    <div class="mb-3">
      <input type="radio" name="role" id="exampleCheck1" value="Customer" />
      <label class="form-check-label" for="exampleCheck1">Customer</label>
      <input type="radio" name="role" id="exampleCheck2" value="Admin" />
      <label class="form-check-label" for="exampleCheck2">Admin</label>
    </div>
    <button type="submit" class="btn btn-outline-primary">Login</button>
  </form>
</div>

<%- include("header.ejs", {title: "Home"}) %>
